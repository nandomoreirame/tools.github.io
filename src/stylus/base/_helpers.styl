$clearfix,
.clearfix
  clearfix()

.show
  display block
  opacity 1
  visibility visible

.hide
  display none
  opacity 0
  visibility hidden

.pull
  &-left
    float left
  &-right
    float right

.sr-only
  position absolute
  width 1px
  height 1px
  padding 0
  margin -1px
  overflow hidden
  clip rect(0, 0, 0, 0)
  border 0

.video-wrapper
  position relative
  padding-bottom 56.25%
  padding-top 25px
  height 0
  object,
  embed,
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
