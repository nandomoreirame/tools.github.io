.header
  min-height 60px
  background-color whiteColor
  box-shadow 0 0 40px 0 rgba(blackColor, .1)
  z-index 100
  padding-left 1.875rem
  padding-right 1.875rem
  margin-bottom 30px
  position fixed
  top 0
  right 0
  left 0
  width 100%
  margin-left 0
  transition all .3s cubic-bezier(.4, 2, .68, 1)
  @extend .clearfix
  +above(tablet-md)
    width calc(100% - 20rem)
    margin-left 20rem
  &__navbar
    position absolute
    right 0
    left 0
    top 0
    transform translate3d(0, -150%, 0)
    transition all .3s cubic-bezier(.4, 2, .68, 1)
    background-color whiteColor
    box-shadow 0 0 40px 0 rgba(blackColor, .1)
    z-index 100
    +above(phone-sm)
      transform translate3d(0, 0, 0)
      box-shadow none
  &__nav
    text-align right
    list-style none
    padding (spacingLarge * 4) spacingBase spacingBase
    margin 0
    +above(phone-sm)
      padding 0
      float right
    &-item
      display block
      +above(phone-sm)
        display inline-block
    &-link,
    &-search,
    svg
      display inline-block
      line-height 60px
    &-search,
    &-link
      font-size 16px
      font-weight 500
      letter-spacing 0.1px
      text-decoration none
      padding 0 1.25rem
      cursor pointer
      color #9a9ea4
      position relative
      &:after
        display block
        content ''
        width 0
        height 3px
        background #6fa1e8
        position absolute
        bottom 0
        transition width .12s ease-in-out
      &--active,
      &:hover
        color #6fa1e8
        &:after
          width 40%
    &-search svg
      position relative
      top 5px
