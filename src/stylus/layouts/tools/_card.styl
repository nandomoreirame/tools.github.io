.toolsCard
  margin toRem(spacingSmall) 0
  padding 0 toRem(spacingSmall)
  width 100%
  +above(desktop-lg)
    width percentage(1/2)
    float left
  +above(desktop-xl)
    width percentage(1/3)
  &__inner
    width 100%
    min-height 339px
    border-radius 10px
    background-color #fff
    box-shadow 0 0 10px 0 rgba(blackColor, .05), 0 5px 20px 0 rgba(blackColor, .05)
    transition .2s box-shadow ease, .2s transform ease
    text-decoration none
    display block
    &:hover,
    &:focus
      box-shadow 0 10px 30px 0 rgba(blackColor, .05), 0 15px 60px 0 rgba(blackColor, .05)
      transform translate3d(0, -5px, 0)
  &__figure
    margin 0
    padding 0
    position relative
    width 100%
    height 150px
    overflow hidden
    border-radius 10px 10px 0 0
    background-repeat no-repeat
    background-position 50%
    background-size cover
  &__image
    @extend .sr-only
  &__title
    padding toRem(spacingSmall) toRem(spacingBase) toRem(spacingMini)
    margin 0
    font-size 22px
    font-weight fontWeightBold
    letter-spacing .2px
    color #3a3838
  &__desc
    padding 0 toRem(spacingBase) toRem(spacingSmall)
    font-size 16px
    letter-spacing .1px
    color #9a9ea4
    margin 0
    display block
    display -webkit-box
    max-width 100%
    height (1.5 * 16px * 2)
    line-height 1.5
    -webkit-line-clamp 2
    -webkit-box-orient vertical
    overflow hidden
    text-overflow ellipsis
  &__footer
    padding toRem(spacingSmall) toRem(spacingBase) toRem(spacingBase)
    @extend .clearfix
  &__user
    display flex
    float left
    align-items center
    span
      line-height 1
    img
      border-radius 4px
      border solid 1px #9a9ea4
      margin-right .625rem
    small
      font-size 13px
      color #9a9ea4
    strong
      font-size 14px
      font-weight 500
      color #333
    small,
    strong
      display block
  &__link
    float right
    svg
      display inline-block
      vertical-align middle
      position relative
      top .625rem
      margin 0
      padding 0
